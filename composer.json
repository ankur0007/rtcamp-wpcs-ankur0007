{
  "name": "wp-phpunit/rtcamp-assignment",
  "description": "Metabox with search for contributors, add/remove and display them in each post",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Ankur Vishwakarma",
      "email": "ankurvishwakarma45@gmail.com"
    }
  ],
  "require": {
    "roots/wordpress": "^6.0"
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1",
    "wp-phpunit/wp-phpunit": "^6.0",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "./vendor/bin/phpcs --standard=phpcs.xml",
    "cbf": "./vendor/bin/phpcbf --standard=phpcs.xml"
  },
  "config": {
    "platform": {
      "php": "8.0"
    },
    "sort-packages": true,
    "allow-plugins": {
      "roots/wordpress-core-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
