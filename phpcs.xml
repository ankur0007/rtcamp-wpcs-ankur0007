<?xml version="1.0"?>
<ruleset name="RTCamp Assignment">
    <!-- Define the coding standard -->
    <rule ref="WordPress"/>
    
    <!-- Include specific folders -->
    <file>admin</file>
    <file>includes</file>
    <file>public</file>
    <file>helper</file>

    <!-- Optionally, exclude other folders -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/wordpress/*</exclude-pattern>
</ruleset>
